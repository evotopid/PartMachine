<% provide(:title, "Source #{@source.name}") %>

<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Name:</th>
    <td><%= @source.name %></td>
  </tr>
  <tr>
    <th>URL:</th>
    <td><%= @source.url %></td>
  </tr>
  <tr>
    <th>Parts:</th>
    <td>
      <ul>
        <% @source.parts.each do |part| %>
          <li><%= link_to part.name, part %></li>
        <% end %>
      </ul>
    </td>
  </tr>
</table>

<br>

<%= link_to 'Edit', edit_source_path(@source) %> |
<%= link_to 'Back', sources_path %>
