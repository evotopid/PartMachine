<% if not defined? @search_query %>
  <% provide(:title, "All Parts") %>
<% else %>
  <% provide(:title, "Search Results for \"#{@search_query}\"") %>
<% end %>

<input
  type="text"
  id="search_field"
  placeholder="Search for parts..."
  <% if defined? @search_query %>
    <%= "value=\"#{@search_query}\"".html_safe %>
  <% end %>
  onkeyup="window.searchKeyWasPressed(event,'<%= search_part_url("") %>')">

<%= parts_grid @parts %>