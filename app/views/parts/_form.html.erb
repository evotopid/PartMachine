<%= form_for(@part) do |f| %>
  <%= render('parts/save_error') %>
  
  <%= f.label :name %><br />
  <%= f.text_field :name %>

  <%= f.label :description %><br />
  <%= f.text_area :description %>
  
  <%= f.label :category_id %><br />
  <%= f.select :category_id, @categories %><br />
  
  <%= f.submit %>
<% end %>
