<%= form_for(@part) do |f| %>
  <%= save_errors @part %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.label :amount %>
  <%= f.text_field :amount %>
  
  <%= f.label :category_id %>
  <%= f.select :category_id, categories_list, selected: @category_id %>
  
  <%= f.submit %>
<% end %>
