<%= form_for(@part) do |f| %>
  <%= save_errors @part %>
  
  <%= f.label :name %><br />
  <%= f.text_field :name %>

  <%= f.label :description %><br />
  <%= f.text_area :description %>
  
  <%= f.label :category_id %><br />
  <%= f.select :category_id, categories_list %><br />
  
  <%= f.submit %>
<% end %>
